#!/bin/sh

REPO_NAME="$1"

git remote add t git.thomaslevine.com:"${REPO_NAME}".git
ssh git.thomaslevine.com "
set -e
git init --bare ${REPO_NAME}.git
echo '
repo.url=${REPO_NAME}
repo.owner=occurrence@thomaslevine.com
' >> /etc/cgitrepos
"
git checkout master
git push t master
echo "Check out http://git.thomaslevine.com/${REPO_NAME}"
